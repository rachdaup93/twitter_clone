var editTweet = "<%= j render(partial: 'applications/tweet_edit', locals:{ tweet: @tweet, user: @user } ) %>"
$("#profileModal .modal-body").html(editTweet)
$("#profileModal .modal-content").css("background-color", "#EAF5F3")

var x;

$("#edit-tweets .tweet_description").focus(function(){
     x = $(this).css('height', '100px')
    setInterval(function(){
        wordCount = $("#edit-tweets .tweet_description").val()
        $('#edit-tweets .word-count').html(240 - wordCount.length)
    }, 100)
})

$("#edit-tweets .tweet_description").blur(function(){
    clearInterval(x)
    setTimeout(function(){ $("#edit-tweets .tweet_description").css('height', '35px') }, 1000)
})