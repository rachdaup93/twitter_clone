<main id="login">
  <nav class="banner">
    <div class="links">
      <%= image_tag('logo_blue', class: 'login-logo')%>
      <b><%= link_to("Home", "/")%></b>
      <b><%= link_to("About", "#")%></b>
    </div>
    <span>Language: <b>English</b></span>
  </nav>
  <% if resource.errors.present? %>
    <% resource.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
  <div class="panel panel-default">
    <div class="container form-box">
      <h1>Forgot your password?</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="field">
            <%= f.email_field :email, class: "form-input", placeholder: "Email", required: true, autofocus: true %>
          </div>
          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "form-button" %>
          </div>
      <% end %>
      <div>
        <span>New to Twitter?</span>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      </div>
    </div>
  </div>
</main>
