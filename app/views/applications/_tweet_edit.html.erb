<section id="edit-tweets">
  <div class="form flex">
    <%= image_tag get_avatar(user, 'thumb'), class: "img-circle" %>
    <%= form_for(tweet) do |f| %>
        <%= f.text_area(:description, class: 'tweet_description', maxlength: 240, placeholder: "What's happening?", required: true) %>
        <div class="footer flex">
          <span class="word-count"><%= 240 - tweet.description.length %></span>
          <%= submit_tag("Edit", class: "tweet-button")%>
        </div>
    <% end %>
  </div>
</section>