<%= form_for(:tweet, url: tweet_path(tweet.id), html: { method: :delete }) do %>
<p>Are you sure you want to delete this tweet?</p>
<div>
  <button class="tweet-button-white" type="button" data-dismiss="modal">Close</button>
  <%= submit_tag("Delete Tweet", class: "tweet-button") %>
</div>
<% end %>