<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, class: "form-input", placeholder: "Email", autofocus: true %>
    <%= f.password_field :password, class: "form-input", placeholder: "Password", minlength: 8, maxlength: 76, required: true, autocomplete: "off" %>
    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    <% end -%>
    <div>
      <%= f.submit "Log in", class: "form-button" %>
    </div>
<% end %>